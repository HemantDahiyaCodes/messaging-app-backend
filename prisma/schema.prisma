generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  avatar   String?
  bio      String?
}

model Messages {
  id          Int @id @default(autoincrement())
  sender_id   Int
  reciever_id Int
  content String
  time DateTime
}

model Friendlist {
  id Int @id @default(autoincrement())
  user_01 Int
  user_02 Int
  friends Boolean
}